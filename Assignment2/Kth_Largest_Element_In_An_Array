class Solution {
    public int findKthLargest(int[] nums, int k) {
        //Arrays.sort(nums);
        //return nums[nums.length-k];
        PriorityQueue<Integer> hp = new PriorityQueue<>();
        for(int i = 0; i<nums.length; i++){
            hp.add(nums[i]);
            if(hp.size()>k){
                hp.poll();
            }
        }
        return hp.peek();
    }
}
